/* pages/home/home.wxss */

.search-wrapper
{
    background-color: #42bd55;
    padding: 15rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
}
.search
{
    background-color: #fff;
    border-radius: 10rpx;
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.search image
{
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

.row {
    margin-bottom: 30rpx;
    min-height: 382rpx;
}

.title-wrapper{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    margin-bottom: 40rpx;
}
.title-wrapper .title{
    color: #494949;
    font-weight: bold;
    font-size: 32rpx;
}

.title-wrapper .more{
    color: #0db019;
    display: flex;
    align-items: center;
}

.title-wrapper .arrow
{
    width: 16rpx;
    height: 16rpx;
    border: 2rpx solid #0db019;
    border-left: none;
    border-top: none;
    transform: rotate(-45deg);
    margin-left: 6rpx;
}

