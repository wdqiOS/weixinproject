/* pages/profile/profile.wxss */
page{
    height: 100%;
}
.container
{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.login-wrapper
{
/* background-color: rebeccapurple; */
height: 400rpx;
display: flex;
justify-content: center;
align-items: center;
position: relative;
}

.login-wrapper .login
{
    color: #1E4826;
    background-color: #fff;
    border-radius: 50rpx;
    font-size: 50rpx;
    height: 100rpx;
    line-height: 100rpx;
    width: 300rpx;
    text-align: center;
    box-shadow: 2rpx 2rpx 10rpx 0 rgba(0, 0, 0, 1);
}
.login-wrapper image
{
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
   
}
.version
{
    /* margin-top: 100rpx; */
    color: #c9c9c9;
    font-size: 24rpx;
    text-align: center;
    margin: 30rpx 0;
}

.items-wrapper
{
    margin-top: 30rpx;


}

.title-wrapper
{
    padding-left: 30rpx;
    padding-right: 40rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
}
.title-wrapper .title{
    font-weight: bold;
    font-size: 36rpx;
}

.title-wrapper .view
{
    color: #838383;
    display: flex;
    align-items: center;
}

.items-wrapper .arrow
{
    width: 20rpx;
    height: 20rpx;
    /* border-right: 4rpx solid #7f7f7f;
    border-bottom: 4rpx solid #7f7f7f; */
    border: 4rpx solid #7f7f7f;
    border-left: none;
    border-top: none;
    transform: rotate(-45deg);
    margin-left: 15rpx;
}


.item:last-of-type .divider{
    /* visibility: hidden;  方式一：仅仅是隐藏，还占用位置*/
    /* display: none; 方式二：比较彻底 */
}


.item{
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    padding-right: 20rpx;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.item .icon
{
    width: 108rpx;
    height: 108rpx;
    margin-right: 30rpx;
}
.info-wrapper
{
    /* width: 100%; */
   /* flex: 1; */
   flex-grow: 1;
   padding-right: 20rpx;
}
.info-wrapper .info
{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.info .left .top{
    margin-bottom: 10rpx;
    font-size: 32rpx;
}
.info .left .bottom
{
    display: flex;
    color: #818181;
    align-items: flex-end;
}
.info .count{
    font-size: 60rpx;
    margin-right: 10rpx;
}

.info .bottom .text
{
    margin-bottom: 10rpx;
}

.info .right
{
    display: flex;
    align-items: center;
    justify-content: space-around;
    flex-grow: 1;
    padding-left: 50rpx;
}

.info .begin-wrapper
{
    display: flex;
    align-items: center;
}

.info .right .text{
    color: #c1c1c1;
    margin-right: 10rpx;
}

.info .right .begin
{
    color: #4a4a4a;
    background-color: #f5f5f5;
    border-radius: 10rpx;
    /* padding-left: 15rpx;
    padding-right: 15rpx;
    padding-top: 15rpx;
    padding-bottom: 15rpx; */
    padding:10rpx 15rpx;
}

.item .divider
{
    width: 100%;
    height: 2rpx;
    background-color: rgba(0, 0, 0, 0.1);
    margin-top: 15rpx;
}

