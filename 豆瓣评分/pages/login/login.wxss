/* pages/login/login.wxss */
.container
{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 30rpx;
    padding-top: 50rpx;
}
.logo
{
    width: 124rpx;
    height: 124rpx;
    margin: 40rpx 0;
    margin-top: 50rpx;
    /* border-radius: 50%; */
    /* 注意：background-image只能传图片远程地址或base64 */
    /* background-image: url(); */
}
.btn-login
{
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    text-align: center;
    border-radius: 10rpx;
}
.wechat
{
    background-color: #42BD55;
    color: #fff;
    margin-bottom: 30rpx;
}
.douban
{
    background-color: #fff;
    color: #42BD55;
    border: 1rpx solid #42BD55;
    border-radius: 10rpx;
}
.agreement
{
    color: #9d9d9d;
    font-size: 24rpx;
    display: flex;
    position: absolute;
    bottom: 50rpx;
}
.agreement .open
{
    margin-left: 10rpx;
    color: #4BB65C;
}