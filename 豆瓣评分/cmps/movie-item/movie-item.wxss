/* cmps/movie-item/movie-item.wxss */
.item {
    display: inline-flex;
    flex-direction: column;
    width: 160rpx;
}

.item .photo{
    width: 100%;
    height: 223rpx;
    margin-bottom: 15rpx;
    border-radius: 10rpx;
    border: 4rpx solid #eee;
}

.item .title{
    font-weight: bold;
    font-size: 30rpx;
    margin-bottom: 4rpx;
    width: 100%;
    /*超出宽度的内容直接隐藏 */
    overflow: hidden;
    /* 尾部的内容改为显示省略号 */
    text-overflow: ellipsis;
    text-align: center;
    /* 不换行 */
    white-space: nowrap;
}

.score {
    display: flex;
    align-items: center;
    color: #818181;
}

.score .stars {
    display: flex;
    align-items: center;
    margin-right: 4rpx;
}

.stars .star{
    width: 24rpx;
    height: 24rpx;
}

